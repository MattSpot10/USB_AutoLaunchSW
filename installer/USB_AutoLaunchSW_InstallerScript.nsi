  SetOutPath "$INSTDIR"
  File "C:\Users\MattSpot10\Documents\GitHub\USB_AutoLaunchSW\publish\System.CodeDom.dll"
  File "C:\Users\MattSpot10\Documents\GitHub\USB_AutoLaunchSW\publish\System.Management.dll"
  File "C:\Users\MattSpot10\Documents\GitHub\USB_AutoLaunchSW\publish\USB_AutoLaunchSW.deps.json"
