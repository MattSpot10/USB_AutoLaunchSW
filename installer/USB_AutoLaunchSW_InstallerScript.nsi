FunctionEnd

Section Uninstall
  Delete "$INSTDIR\${PRODUCT_NAME}.url"
  Delete "$INSTDIR\uninst.exe"
  Delete "$INSTDIR\USB_AutoLaunchSW.runtimeconfig.json"
  Delete "$INSTDIR\USB_AutoLaunchSW.pdb"
  Delete "$INSTDIR\USB_AutoLaunchSW.exe"
  Delete "$INSTDIR\USB_AutoLaunchSW.dll"
  Delete "$INSTDIR\USB_AutoLaunchSW.deps.json"
  Delete "$INSTDIR\System.Management.dll"
  Delete "$INSTDIR\System.CodeDom.dll"
  Delete "$INSTDIR\runtimes\win\lib\net8.0\System.Management.dll"
  Delete "$INSTDIR\Newtonsoft.Json.dll"
  Delete "$INSTDIR\icon.ico"
  Delete "$INSTDIR\HELP.html"
  
  ; Delete the config file from the user's Documents folder
  # Get the path to the user's Documents folder
  ReadEnvStr $0 USERPROFILE
  StrCpy $1 "$0\Documents\USB_AutoLaunchSW.config.json"

  # Delete the file
  Delete $1
  
  ; Delete the shortcut from the Startup folder
  Delete "$STARTMENU\Programs\Startup\USB_AutoLaunchSW.lnk"

  Delete "$SMPROGRAMS\USB_AutoLaunchSW\Uninstall.lnk"
  Delete "$SMPROGRAMS\USB_AutoLaunchSW\Website.lnk"
  Delete "$DESKTOP\USB_AutoLaunchSW.lnk"
  Delete "$SMPROGRAMS\USB_AutoLaunchSW\USB_AutoLaunchSW.lnk"

  RMDir "$SMPROGRAMS\USB_AutoLaunchSW"
  RMDir "$INSTDIR\runtimes\win\lib\net8.0"
  RMDir "$INSTDIR"

  DeleteRegKey ${PRODUCT_UNINST_ROOT_KEY} "${PRODUCT_UNINST_KEY}"
  DeleteRegKey HKLM "${PRODUCT_DIR_REGKEY}"
  SetAutoClose true
SectionEnd